<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExceptionActivity"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    tools:showIn="@layout/activity_exception">

    <TextView
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="Please use VPN to connect to Release Management Jenkins" />

    <TextView
        android:textSize="18dp"
        android:id="@+id/exception_text_id"
        android:layout_width="wrap_content"
        android:textStyle="italic"
        android:layout_height="wrap_content"
        android:text="Please use VPN to connect to Jenkins" />



</LinearLayout>